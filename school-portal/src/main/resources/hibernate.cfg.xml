<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/learnersacademy</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">kHing$!x6</property>
        
        <!-- Hibernate ORM settings -->
        <property name="hibernate.hbm2ddl.auto">update</property> <!-- Automatically update database schema -->
        <property name="hibernate.show_sql">true</property> <!-- Show SQL statements in console -->
        <property name="hibernate.format_sql">true</property> <!-- Format SQL statements for readability -->

        <!-- Mapping classes (entities) -->
        <mapping class="com.learnersacademy.model.Admin"/>
        <mapping class="com.learnersacademy.model.ClassEntity"/> <!-- Use ClassEntity instead of Class -->
        <mapping class="com.learnersacademy.model.Student"/>
        <mapping class="com.learnersacademy.model.Teacher"/>
    </session-factory>
</hibernate-configuration>
